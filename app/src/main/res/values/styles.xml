<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--
        <item name="android:windowTranslucentStatus">true</item>
-->
        <!--
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
-->
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>

        <!-- <item name="android:fontFamily">@font/lato_regular</item>-->

    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#F00</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyStyle">
        <item name="colorAccent">#8c8c8c</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#28b446</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemTheme1">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="SelectableItemBackground1">
        <item name="android:theme">@style/SelectableItemTheme1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <style name="SCBSwitch" parent="Theme.AppCompat">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#279E5E</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#000</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#dcdcdc
        </item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




    <!-- Application theme. -->


</resources>
