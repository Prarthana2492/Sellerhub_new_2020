<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:orientation="vertical"
    android:weightSum="50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Farms"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_weight="10"
            android:textSize="16dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="40"
        android:weightSum="80"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/book_nw_linear"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:layout_marginTop="12dp"
            android:layout_marginRight="17dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/ic_field_grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/segoeui"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Farm Name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/offers_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:layout_marginTop="12dp"
            android:layout_marginRight="17dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You have not listed your Farms details."
                android:fontFamily="@font/segoeui"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/addnewfarms"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Add New Farm"
                android:fontFamily="@font/segoeui"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:textColor="#fff"
                android:background="@drawable/border_filled_red_not_curved"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>