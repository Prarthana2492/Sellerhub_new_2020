            <LinearLayout
                android:id="@+id/loan_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"

                android:weightSum="100">

                <TextView
                    android:id="@+id/state_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_grey"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:fontFamily="@font/segoeui"
                    android:hint="State"
                    android:textColor="#000"
                    android:paddingVertical="13dp"
                    android:paddingLeft="10dp"
                    android:visibility="visible"
                    android:paddingRight="10dp"
                    android:textColorHint="#9D9D9D"
                    android:textSize="16dp"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/relativename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_grey"
                android:drawableRight="@drawable/ic_down_arrow"
                android:fontFamily="@font/segoeui"
                android:hint="District"
                android:paddingVertical="13dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="visible"
                android:textColor="#000"
                android:layout_marginHorizontal="16dp"
                android:textColorHint="#9D9D9D"
                android:textSize="16dp"

                />




            <EditText
                android:id="@+id/farmertype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_grey"
                android:fontFamily="@font/segoeui"
                android:hint="Savings Bank A/C Number"
                android:paddingVertical="13dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:inputType="number"
                android:layout_marginHorizontal="16dp"
                android:textColorHint="#9D9D9D"
                android:textSize="16dp"
                />

            <EditText
                android:id="@+id/farmercategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_grey"
                android:fontFamily="@font/segoeui"
                android:hint="Confirm Savings Bank A/C Number"
                android:paddingVertical="13dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:inputType="number"
                android:textColorHint="#9D9D9D"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="10dp"
                android:textSize="16dp"
                />


