<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:weightSum="100"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/green"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">



        <LinearLayout
            android:id="@+id/back_feed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/ripple_effect"
            android:gravity="center">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_go_back_left_arrow_"

                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location and Image"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/toolbar_title" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_weight="35">


        <TextView
            android:id="@+id/lctn_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Select Store Location"
            android:textColor="#000"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="20dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_grey">


            <ImageView
                android:id="@+id/select_location"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/ic_map"
                />


            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Select Location"
                android:textColor="#000"
                android:fontFamily="@font/segoeui"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:layout_weight="35"
        android:orientation="vertical">


        <TextView
            android:id="@+id/photo_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:text="Capture store Photo"
            android:textColor="#000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_grey"
            android:gravity="center"
            android:layout_margin="20dp"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >


                    <ImageView
                        android:id="@+id/capture_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/fruit_shop" />

                    <ImageView
                        android:id="@+id/image_athcc"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom|right"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/camera" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/txhgt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="bottom"
                    android:text="Capture Photo"
                    android:textColor="#000"

                    android:textSize="14dp" />
            </FrameLayout>



        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_weight="11"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/continu_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/apply_loan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PROCEED"
            android:textSize="20dp"
            android:gravity="center"
            android:fontFamily="@font/segoeui"
            android:background="@drawable/grey_curved_border"
            android:textColor="#fff"
            />



    </LinearLayout>


</LinearLayout>