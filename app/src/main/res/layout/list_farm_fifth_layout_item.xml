<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#fff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#fff"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/back_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_filter_state"
            >


            <ImageView
                android:id="@+id/b_arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_close_black"
                style="@style/SelectableItemBackground"
                android:background="?attr/selectableItemBackgroundBorderless"

                />

        </LinearLayout>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:background="#fff"
        android:orientation="vertical"
        >
        <!--
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical"
                    android:background="#ffff"
                    >

                    <ImageView
                        android:id="@+id/cover_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cow"
                        />

                </LinearLayout>
        -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffff"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_photo"
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <!-- <LinearLayout
                 android:id="@+id/add_photo_layout1"
                 android:layout_width="150dp"
                 android:layout_height="150dp"
                 android:orientation="horizontal"
                 android:layout_marginTop="5dp"
                 android:background="@drawable/border_grey_filled"
                 >

                 <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:text="ADD PHOTO"
                     android:gravity="center"
                     android:textColor="#000"
                     />

             </LinearLayout>
 -->



        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_photo_layout"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:background="@drawable/border_grey_filled"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ADD PHOTO"
                android:gravity="center"
                android:textColor="#000"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:background="#fff"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="right"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            >
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:layout_gravity="right"
                android:textColor="#000"
                android:textSize="14dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                />-->
            <TextView
                android:id="@+id/continue_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:gravity="center"
                android:layout_marginHorizontal="20dp"
                android:textColor="#fff"
                android:background="@drawable/border_filled_red_not_curved"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                />




        </LinearLayout>

        <!--<TextView-->
            <!--android:id="@+id/skip"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Skip"-->
            <!--android:gravity="center"-->
            <!--android:layout_marginHorizontal="20dp"-->
            <!--android:textColor="#000"-->
            <!--android:paddingVertical="10dp"-->
            <!--android:paddingHorizontal="20dp"-->
            <!--/>-->

    </LinearLayout>


</LinearLayout>
