<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#fff"
    android:layout_marginBottom="2dp"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginLeft="5dp"
            android:paddingVertical="30dp"
            android:layout_marginTop="0dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="30">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/biscuit_milk_glucose" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingLeft="5dp"
                    >

                    <TextView
                        android:id="@+id/off_text"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_circle_img"
                        android:fontFamily="@font/segoeui"
                        android:gravity="center"
                        android:text="50%\n off"
                        android:textColor="#fff"
                        android:textSize="12dp"
                        android:visibility="gone" />
                </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/loan_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="16dp" />

                <!--<de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/bank_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/avatarmale"
                    app:civ_border_color="#dcdcdc"
                    app:civ_border_width="0.0dp" />-->

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="55">

                <TextView
                    android:id="@+id/prod_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:text="Parle-G Gold Milk Glucose"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:text="Quantity : 1"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:text="₹100"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:textSize="16dp" />
                <TextView
                android:id="@+id/shipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:gravity="center_vertical"
                android:text="Delivery Charges : ₹2"
                android:layout_marginLeft="5dp"
                android:textSize="14dp" />
<!--
                <TextView
                    android:id="@+id/shipping_iscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:text="Shipping iscount : ₹2"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp" />
-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="15">


            </LinearLayout>
        </LinearLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#dcdcdc" />

    </LinearLayout>

