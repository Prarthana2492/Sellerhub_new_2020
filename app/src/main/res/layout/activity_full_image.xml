            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/prod_imgg"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/avatarmale" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_camera"
                android:layout_width="35dp"
                android:layout_marginTop="20dp"
                android:layout_height="35dp"
                android:layout_gravity="top|right"
                android:src="@drawable/ic_cicr"
                />
        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fd_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:text="Name"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            />

        <EditText
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Your Name"
            android:textSize="14dp"
            android:maxLength="30"
            android:editable="false"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:textColorHint="@color/dot_dark_screen1"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:inputType="textFilter"
            android:textColor="@color/dot_dark_screen1"
            android:background="@drawable/border_transperent"
            android:layout_marginHorizontal="10dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#cccccc"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fd_tye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:text="Phone No"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            />


        <EditText
            android:id="@+id/profile_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Your Phone No"
            android:textSize="14dp"
            android:focusable="false"
            android:textColorHint="@color/dot_dark_screen1"
            android:background="@drawable/border_transperent"
            android:inputType="number"
            android:maxLength="13"
            android:editable="false"
            android:textColor="@color/dot_dark_screen1"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            />


    </LinearLayout>
