<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
           android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/green"
           android:gravity="center_vertical"
                 >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:background="@color/menu_green"
                    tools:ignore="MissingConstraints">



                    <LinearLayout
                        android:id="@+id/back_feed"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_filter_state"
                        android:gravity="center">


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_go_back_left_arrow_"

                            />

                    </LinearLayout>



                    <TextView
                       android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                       android:text="Address"
                     android:textSize="20dp"
                    android:textColor="#fff"
                      android:textStyle="bold"
                        android:layout_gravity="center"
                     android:layout_marginHorizontal="10dp"
                        android:id="@+id/toolbar_title" />


    </LinearLayout>
            </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical"
        android:layout_marginTop="23dp"
        android:layout_marginHorizontal="16dp"
        >

        <EditText
            android:id="@+id/curr_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Current Address"
            android:paddingLeft="10dp"
            android:textColorHint="#9D9D9D"
            android:editable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/segoeui"
            android:paddingVertical="13dp"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/gpsindicator"
            android:background="@drawable/request_price_white_border2"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:text="Or"
            android:textColor="#9D9D9D"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="State"
            android:paddingLeft="10dp"
            android:textColorHint="#9D9D9D"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="20dp"
            android:editable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:paddingVertical="13dp"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_down_arrow"
            android:background="@drawable/request_price_white_border2"
            android:textSize="16dp"
            />



        <LinearLayout
            android:id="@+id/loan_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            >

            <EditText
                android:id="@+id/district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="District"
                android:paddingLeft="10dp"
                android:layout_marginTop="12dp"
                android:paddingRight="10dp"
                android:clickable="false"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:drawableRight="@drawable/ic_down_arrow"
                android:textSize="16dp"
                android:textColorHint="#9D9D9D"
                android:fontFamily="@font/segoeui"
                android:paddingVertical="13dp"
                android:background="@drawable/request_price_white_border2"

                />
        </LinearLayout>


        <EditText
            android:id="@+id/block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Block"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:textColorHint="#9D9D9D"
            android:paddingLeft="10dp"
            android:fontFamily="@font/segoeui"
            android:paddingRight="10dp"
            android:clickable="false"
            android:editable="false"
            android:focusableInTouchMode="false"
            android:drawableRight="@drawable/ic_down_arrow"
            android:paddingVertical="13dp"
            android:background="@drawable/request_price_white_border2"

            />



