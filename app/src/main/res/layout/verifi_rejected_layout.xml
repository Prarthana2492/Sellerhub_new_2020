<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:background="@color/menu_green">



        <LinearLayout
            android:id="@+id/back_feed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_filter_state"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <ImageView
                android:id="@+id/back_arrw"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_go_back_left_arrow_"

                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verification"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/setting_tittle" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="81"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColorHint="#9D9D9D"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="20dp"
            android:paddingRight="10dp"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/ph_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="8920084557"
            android:paddingLeft="10dp"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/segoeui"

            android:paddingRight="10dp"
            android:textSize="18dp"
            android:background="@drawable/border_transperent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColorHint="#9D9D9D"
            android:fontFamily="@font/segoeui"
            android:paddingRight="10dp"
            android:textSize="18dp"
            android:layout_marginTop="30dp"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejected"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/segoeui"
            android:paddingRight="10dp"
            android:textSize="18dp"
            android:layout_weight="70"
            />

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_weight="30"
        android:src="@drawable/ic_refresh_black_36dp"

        />

</LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="51"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="26"
                android:orientation="horizontal"
                >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/avatarmale"
                android:layout_weight="15"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update the shop front image"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoeui"
                android:paddingRight="10dp"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"

                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    Contact support for futher Details"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/segoeui"
                    android:paddingRight="10dp"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_edit_pencil"
                    android:layout_marginBottom="20dp"

                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/cont_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/border_filled_red_not_curved"
        android:orientation="horizontal"
        android:layout_weight="9"
        android:gravity="center"
        >


        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:gravity="bottom"
            android:padding="15dp"
            android:fontFamily="@font/segoeui"
            android:textColor="#ffffff"
            />


    </LinearLayout>


</LinearLayout>