<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/lay_account">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/menu_green"
                android:orientation="horizontal"
                android:padding="8dp"
                tools:ignore="MissingConstraints">


                <LinearLayout
                    android:id="@+id/back_feed"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_filter_state"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_go_back_left_arrow_"

                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/setting_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="Settings"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="100"
                >

                <LinearLayout
                    android:id="@+id/acc_info_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp"
                    android:weightSum="100"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        >


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_user_profile"


                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="75"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <TextView
                            android:id="@+id/acc_info1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Account"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            />

                        <TextView
                            android:id="@+id/sub_acc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Profile, Your Address, Change Password"
                            android:textSize="14dp"
                            />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp"
                    android:weightSum="100"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        >


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_close_envelop"


                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="75"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <TextView
                            android:id="@+id/reque"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="List"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            />

                        <TextView
                            android:id="@+id/sub_reque"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Make a List, Your List"
                            android:textSize="14dp"
                            />



                    </LinearLayout>



                </LinearLayout>


                <LinearLayout
                    android:id="@+id/not_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp"
                    android:weightSum="100"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        >


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_notification"


                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="75"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <TextView
                            android:id="@+id/notifi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Notifications"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            />

                        <TextView
                            android:id="@+id/sub_notifi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Messages, Activities"
                            android:textSize="14dp"
                            />

                    </LinearLayout>



                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lang_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp"
                    android:weightSum="100"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        >


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_language"


                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="75"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <TextView
                            android:id="@+id/lang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Language"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            />

                        <TextView
                            android:id="@+id/sub_lang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="English"
                            android:textSize="14dp"
                            />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/help_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp"
                    android:weightSum="100"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        >


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_question"


                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="75"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <TextView
                            android:id="@+id/help"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Help"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            />

                        <TextView
                            android:id="@+id/sub_help"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="FAQ, Feedback, Privacy Policy"
                            android:textSize="14dp"
                            />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dcdcdc"
                            android:layout_marginTop="20dp"
                            />

                    </LinearLayout>






                </LinearLayout>


                <LinearLayout
                    android:id="@+id/invi_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:weightSum="100"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        >


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_friends"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="75"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <TextView
                            android:id="@+id/invite_frnd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Invite a Friend"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            />


                    </LinearLayout>



                </LinearLayout>





            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>

