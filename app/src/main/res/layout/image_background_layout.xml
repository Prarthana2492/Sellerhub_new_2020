                            android:textColorHint="#FFFFFF"
                            android:backgroundTint="@android:color/white"
                            android:textCursorDrawable="@drawable/cursor_color_white"
                            />-->



                    </LinearLayout>






                </FrameLayout>

                    <LinearLayout
                        android:id="@+id/tips_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="36"
                        android:background="#ffffff"
                        android:clickable="true"
                        android:fontFamily="@font/segoeui"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/tips"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/segoeui"
                            android:text="Tips"
                            android:textColor="#000"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/p_txt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="10dp"
                            android:drawableLeft="@drawable/ic_verified_green"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/segoeui"
                            android:text="Go few steps back and capture picture of full crop / harvest / farm produce"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/p_txt2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="10dp"
                            android:drawableLeft="@drawable/ic_verified_green"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/segoeui"
                            android:text="Take pictures in a day.No pictures in the night"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/p_txt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="10dp"
                            android:drawableLeft="@drawable/ic_verified_green"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/segoeui"
                            android:text="Crop full picture to be visible"
                            android:textColor="#000"
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="10dp"
                            android:drawableLeft="@drawable/ic_verified_green"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/segoeui"
                            android:text="Photo should be clear and sharp"
                            android:textColor="#000"
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/take_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:text="Take photo again"
                            android:textColor="#713ECC"
                            android:textSize="16dp" />


                        <!--<ImageView
                            android:id="@+id/cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_close_icon"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            />-->

                    </LinearLayout>

                </LinearLayout>
                    </LinearLayout>
                </ScrollView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_filled_red_not_curved"
        android:layout_gravity="bottom"
        android:gravity="center"
        >


        <TextView

            android:id="@+id/continue_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:gravity="center"
            android:padding="17dp"
            android:fontFamily="@font/segoeui"
            android:textColor="#ffffff"

            />


