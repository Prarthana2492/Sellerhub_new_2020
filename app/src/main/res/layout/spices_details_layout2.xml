<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
      >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal"
                android:background="@color/menu_green">



                <LinearLayout
                    android:id="@+id/back_feed"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_filter_state"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_go_back_left_arrow_"

                        />

                </LinearLayout>



                <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Spices Details"
                    android:textSize="20dp"
                    android:textColor="#fff"
                   android:textStyle="bold"
                    android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                   android:id="@+id/toolbar_title" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_weight="90"
        android:layout_marginHorizontal="16dp"
        >


        <TextView
            android:id="@+id/sellnamee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColorHint="#9D9D9D"
            android:fontFamily="@font/segoeui"
            android:paddingVertical="13dp"
            android:paddingRight="10dp"
            android:background="@drawable/request_price_white_border2"
            android:textSize="16dp"
            android:editable="false"
            android:clickable="false"
            android:focusable="false"
            />



        <EditText
            android:id="@+id/variety"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Variety"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#9D9D9D"
            android:fontFamily="@font/segoeui"
            android:paddingVertical="13dp"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_down_arrow"
            android:background="@drawable/request_price_white_border2"
            android:textSize="16dp"
            android:editable="false"
            android:clickable="false"
            android:focusable="false"
            />



        <LinearLayout
            android:id="@+id/quality_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            >


            <EditText
                android:id="@+id/quality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/request_price_white_border2"
                android:clickable="false"
                android:drawableRight="@drawable/ic_down_arrow"
                android:editable="false"
                android:focusable="false"
                android:fontFamily="@font/segoeui"
                android:hint="Quality"
                android:paddingVertical="13dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="#9D9D9D"
                android:textSize="16dp"

                />

        </LinearLayout>



        <EditText
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#9D9D9D"
            android:paddingLeft="10dp"
            android:fontFamily="@font/segoeui"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_down_arrow"
            android:background="@drawable/request_price_white_border2"
            android:paddingVertical="13dp"
            android:editable="false"
            android:clickable="false"
            android:focusable="false"
            />



        <EditText
            android:id="@+id/unit_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unit Of Measurement"
            android:textSize="16dp"
            android:textColorHint="#9D9D9D"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoeui"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingVertical="13dp"
            android:drawableRight="@drawable/ic_down_arrow"
            android:background="@drawable/request_price_white_border2"
            android:editable="false"
            android:clickable="false"
            android:focusable="false"
            />



        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:textSize="16dp"
            android:textColorHint="#9D9D9D"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoeui"
            android:paddingLeft="10dp"
            android:inputType="numberDecimal"
            android:digits="0123456789,"
            android:maxLength="8"
            android:paddingVertical="13dp"
            android:background="@drawable/request_price_white_border2"

            />


    </LinearLayout>

        </LinearLayout>
  </ScrollView>


    <LinearLayout
        android:id="@+id/continuebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_filled_red_not_curved"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
        >


        <TextView

            android:id="@+id/apply_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:gravity="center"
            android:padding="17dp"
            android:fontFamily="@font/segoeui"
            android:textColor="#ffffff"

            />

       <!-- <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/ic_right_arrow2"/>-->

    </LinearLayout>


</LinearLayout>