<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/bottom_sheet1"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:id="@+id/adres_layout2"
        android:layout_marginBottom="5dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"

            >

            <LinearLayout
                android:id="@+id/linear_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="10dp">


                <TextView
                    android:id="@+id/name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum"
                    android:textSize="18dp"
                    android:textColor="#161823"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/street_address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/dot_dark_screen1"
                    android:text="#12 5th main 2nd cross xyz Apartments"/>

                <TextView
                    android:id="@+id/colony"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/dot_dark_screen1"
                    android:text="Colony"/>

                <TextView
                    android:id="@+id/districttt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/dot_dark_screen1"
                    android:text="Area District"/>

                <TextView
                    android:id="@+id/city_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/dot_dark_screen1"
                    android:text="State,Pincode"/>


                <TextView
                    android:id="@+id/mobile_no1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/dot_dark_screen1"
                    android:text="Phone Number - 7895632412"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">


                <TextView
                    android:id="@+id/default_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:textColor="#064a8e"
                    android:text="Set as Default Address"/>

                <TextView
                    android:id="@+id/default_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:textSize="13dp"
                    android:textColor="#064a8e"
                    android:text="Default Address"/>


                <TextView
                    android:id="@+id/edit_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#064a8e"
                    android:padding="10dp"
                    android:text="Edit"/>







                <TextView
                    android:id="@+id/delete_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:textColor="#064a8e"
                    android:text="Delete"/>









            </LinearLayout>









        </LinearLayout>




    </android.support.v4.widget.NestedScrollView>
</LinearLayout>