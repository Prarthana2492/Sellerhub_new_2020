<android.support.v7.widget.Toolbar android:id="@+id/toolbar"
    android:minHeight="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:titleTextColor="@android:color/white"
    android:background="@color/menu_green"
    android:gravity="left"
    android:layout_gravity="left"
    android:contentInsetLeft="0dp"
    android:contentInsetStart="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="10dp"
    android:contentInsetRight="0dp"
    android:contentInsetEnd="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetEnd="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:weightSum="80"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/booknow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:layout_marginRight="17dp"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/home_border"
                android:src="@drawable/ic_indian_coin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:fontFamily="@font/segoeui"
                android:textSize="12dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Book Now" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/offer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:layout_marginRight="17dp"
            android:orientation="vertical" >


            <ImageView
                android:id="@+id/button2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/home_border"
                android:src="@drawable/ic_discount" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offers"
                android:textStyle="bold"
                android:fontFamily="@font/segoeui"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dealer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="20"
            android:layout_marginRight="17dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/buttonr"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:background="@drawable/home_border"
                android:src="@drawable/ic_placeholder_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dealers"
                android:fontFamily="@font/segoeui"
                android:textSize="12dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#ECE9E9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="20"
            android:layout_marginRight="17dp"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/buttonf"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:background="@drawable/home_border"
              />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="@font/segoeui"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.Toolbar>

