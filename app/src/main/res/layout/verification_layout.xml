        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verification"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:id="@+id/setting_tittle" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="81"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="vertical">

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/lightgray"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="20dp"
            android:paddingRight="10dp"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/ph_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="8920084557"
            android:paddingLeft="10dp"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/segoeui"
            android:editable="false"
            android:paddingRight="10dp"
            android:textSize="18dp"
            android:background="@drawable/border_transperent"
            />

        <TextView
            android:id="@+id/only_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/lightgray"
            android:fontFamily="@font/segoeui"
            android:paddingRight="10dp"
            android:textSize="18dp"
            android:layout_marginTop="30dp"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">



        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Progress"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/navy_blue"
            android:fontFamily="@font/segoeui"
            android:paddingRight="10dp"
            android:textSize="18dp"
            android:layout_weight="70"
            />

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_weight="30"
        android:src="@drawable/ic_reload"

        />

</LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="51"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imgggg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_call_center_agent"
                android:layout_weight="40"
                />

            <TextView
                android:id="@+id/sts_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verification"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoeui"
                android:paddingRight="10dp"
                android:textSize="18dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:layout_marginBottom="20dp"

                />


        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/cont_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/border_filled_red_not_curved"
        android:orientation="horizontal"
        android:layout_weight="9"
        android:gravity="center"
        >


        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="proceed"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:gravity="bottom"
            android:padding="15dp"
            android:fontFamily="@font/segoeui"
            android:textColor="#ffffff"
            />


    </LinearLayout>


</LinearLayout>