<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="100">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/jk"
                />
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="80">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Location"
            android:textSize="14dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bangaluru"
                android:textSize="18dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:drawableRight="@drawable/ic_down_arrow"
             />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_wheat_grains"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_bell"
            />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payments"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
       >

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="30"
        android:weightSum="80"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/book_nw_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:layout_marginTop="12dp"
            android:layout_marginRight="17dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/home_border"
                android:src="@drawable/ic_indian_coin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/segoeui"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Payment Statement" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/offers_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:layout_marginTop="12dp"
            android:layout_marginRight="17dp"
            android:orientation="vertical" >


            <ImageView
                android:id="@+id/button2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/home_border"
                android:src="@drawable/ic_discount" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Transfer"
                android:fontFamily="@font/segoeui"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dealer_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="20"
            android:layout_marginTop="12dp"
            android:layout_marginRight="17dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/buttonr"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:background="@drawable/home_border"
                android:src="@drawable/ic_placeholder_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Bank Account"
                android:fontFamily="@font/segoeui"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="20"
            android:layout_marginTop="12dp"
            android:layout_marginRight="17dp"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/buttonf"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:background="@drawable/home_border"
                android:src="@drawable/ic_transfer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/segoeui"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_gray">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="30"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Summary"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            >
        </TextView>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_bar_chart" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="30"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Orders"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
           >
        </TextView>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/ic_pie_chart"
          />

    </LinearLayout>




</LinearLayout>
