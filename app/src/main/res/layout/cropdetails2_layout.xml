<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/linearLayout"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
android:weightSum="100"
android:orientation="vertical"
android:background="@android:color/white"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="100"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="91"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:background="@color/menu_green"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:id="@+id/back_feed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_filter_state"
                android:layout_gravity="center"
                android:gravity="center">


                <ImageView
                    android:id="@+id/back_arrw"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_go_back_left_arrow_"

                    />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crop Details"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:id="@+id/setting_tittle" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/quality_linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="25dp"
            android:layout_weight="18"
            android:orientation="vertical">


            <TextView
                android:id="@+id/organic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/segoeui"
                android:layout_marginTop="10dp"
                android:text="Organic Produce"
                android:textColor="#000"
                android:textSize="18dp"


                />


            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:weightSum="3"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/yes"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="13dp"
                    />


                <TextView
                    android:id="@+id/no"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="No"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="13dp"
                    />

               <!-- <TextView
                    android:id="@+id/cgrade_btn"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="C Grade"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="13dp"
                    />-->




            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/package_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="30"
            android:orientation="vertical">


            <TextView
                android:id="@+id/package1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/segoeui"
                android:layout_marginTop="10dp"
                android:text="Packaging type available"
                android:textColor="#000"
                android:textSize="18dp"


                />


            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:weightSum="3"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/cartons_btn"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="Cartons"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="13dp"
                    />


                <TextView
                    android:id="@+id/plastic_btn"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="Plastic Box"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="13dp"
                    />

                <TextView
                    android:id="@+id/pet_btn"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="Pet Jar"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="13dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/other_btn"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="Other Option"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="13dp"
                    />


            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="31"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:text="Packaging Size(Kg/Ton)"
                android:textColor="#000"
                android:textSize="18dp"

                />


            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:weightSum="3"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/fivekg_btn"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="5Kg"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="13dp"
                    />




                <TextView
                    android:id="@+id/tenkg_btn"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="10Kg"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="13dp"
                    />

                <TextView
                    android:id="@+id/twentykg_btn"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="20Kg"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="13dp"
                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:weightSum="3"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/fiftykg_btn"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="50Kg"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="13dp"
                    />


                <TextView
                    android:id="@+id/hundrdkg_btn"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="100Kg"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="13dp"
                    />


               <TextView
                    android:id="@+id/otherkg_btn"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/segoeui"
                    android:layout_weight="1"
                    android:text="Other Option"
                    android:gravity="center"
                    android:background="@drawable/black_bordr_white_filled"
                    android:textColor="#000"
                    android:textSize="13dp"
                    />




            </LinearLayout>


        </LinearLayout>




    </LinearLayout>
</ScrollView>


<LinearLayout
    android:id="@+id/continuebtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/border_filled_red_not_curved"

    >


    <TextView
        android:id="@+id/requst_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List for Selling"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:gravity="center"
        android:padding="17dp"

        android:fontFamily="@font/segoeui"
        android:textColor="#fff"
         />
</LinearLayout>
</LinearLayout>

