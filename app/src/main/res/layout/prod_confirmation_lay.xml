<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:weightSum="100"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/menu_green"
        >



        <LinearLayout
            android:id="@+id/back_feed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_filter_state"
            android:gravity="center">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_go_back_left_arrow_"

                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmation"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="92"
        >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/prod_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/dairy_farm"
            android:scaleType="fitXY"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:text="Product Name"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/prod_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:text="Parle-G Gold Milk Glucose"
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:text="MRP"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/mrp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:text="Rs 00"
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/price_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:text="Price"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:text="Rs 00"
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/offer_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:text="Offer Price"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/offer_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:text="Rs 00"
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:text="Quantiry"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:text="1 Kg"
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/exp_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:text="Expiry Date"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/exp_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:text="20/08/2020"
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:text="Delivery Charges"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/delivery_charges"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:text="Rs 00"
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:fontFamily="@font/segoeui"
                android:gravity="center_vertical"
                android:text="Brand"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:fontFamily="@font/segoeui"
                android:gravity="center_vertical"
                android:text="Brand"
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeui"
        android:text="EDIT"
        android:singleLine="false"
        android:layout_marginHorizontal="16dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:textColor="#3F51B5"
        android:textSize="16dp" />

   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeui"
        android:text="Comment"
        android:drawableRight="@drawable/ic_astrick_icon"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:drawablePadding="5dp"
        android:textColor="#000"
        />


    <EditText
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comment"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="start"
        android:gravity="start"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/border_2_empty"
        />-->

</LinearLayout>
</ScrollView>

    <LinearLayout
        android:id="@+id/continuebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_filled_red_not_curved"
        android:orientation="horizontal"
        android:gravity="center"
        >


        <TextView
            android:id="@+id/apply_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:gravity="center"
            android:padding="15dp"
            android:fontFamily="@font/segoeui"
            android:textColor="#ffffff"
            />

    </LinearLayout>


</LinearLayout>












