    <TextView
        android:id="@+id/prod_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeui"
        android:gravity="center_vertical"
        android:text="Parle-G Gold Milk Glucose"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:text="Rs100"
            android:textStyle="bold"
            android:singleLine="false"
            android:textColor="#000"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:text="MRP"
            android:layout_marginLeft="20dp"
            android:singleLine="false"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/actual_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:text="Rs100"
            android:layout_marginLeft="3dp"
            android:singleLine="false"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/offer_perc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:text="50%"
            android:textColor="#fff"
            android:paddingHorizontal="10dp"
            android:background="@drawable/border_filled_red_register"
            android:layout_marginLeft="20dp"
            android:singleLine="false"
            android:textSize="14dp" />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/prod_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/dairy_farm"
            android:scaleType="fitXY"

            />


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeui"
        android:gravity="center_vertical"
        android:text="About this product"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/abt_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeui"
        android:gravity="center_vertical"
        android:text="About this product"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="14dp" />



</LinearLayout>












