        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal"
            android:background="@color/menu_green"
         >



            <LinearLayout
                android:id="@+id/back_feed1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_filter_state"
                android:gravity="center">


                <ImageView
                    android:id="@+id/back_arrw"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_close"

                    />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farm Ownership"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:id="@+id/setting_tittle" />


        </LinearLayout>



        <EditText
            android:id="@+id/owner_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Owner Full Name *"
            android:textSize="18dp"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:paddingRight="10dp"
            android:inputType="textFilter"
            android:layout_marginTop="15dp"
            android:textColor="#0C0C0C"
            android:textColorHint="#0C0C0C"
            android:backgroundTint="@android:color/black"
            android:textCursorDrawable="@drawable/cursor_color_black"
            />



        <EditText

            android:id="@+id/fath_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Father Name*"
            android:textSize="18dp"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:paddingRight="10dp"
            android:inputType="textFilter"
            android:layout_marginTop="15dp"
            android:textColor="#0C0C0C"
            android:textColorHint="#0C0C0C"
            android:backgroundTint="@android:color/black"
            android:textCursorDrawable="@drawable/cursor_color_black"
            />



        <EditText

            android:id="@+id/moth_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Mother Name"
            android:textSize="18dp"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:paddingRight="10dp"
            android:inputType="textFilter"
            android:layout_marginTop="15dp"
            android:textColor="#0C0C0C"
            android:textColorHint="#0C0C0C"
            android:backgroundTint="@android:color/black"
            android:textCursorDrawable="@drawable/cursor_color_black"
            />


        <EditText

            android:id="@+id/cont_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Contact Number *"
            android:textSize="18dp"
            android:maxLength="10"
            android:paddingRight="10dp"
            android:inputType="number"
            android:layout_marginTop="15dp"
            android:textColor="#0C0C0C"
            android:textColorHint="#0C0C0C"
            android:backgroundTint="@android:color/black"
            android:textCursorDrawable="@drawable/cursor_color_black"
            />


        <EditText

            android:id="@+id/acqu_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Acquisition Type *"
            android:textSize="18dp"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:paddingRight="10dp"
            android:inputType="textFilter"
            android:layout_marginTop="15dp"
            android:textColor="#0C0C0C"
            android:textColorHint="#0C0C0C"
            android:backgroundTint="@android:color/black"
            android:textCursorDrawable="@drawable/cursor_color_black"
            />


      <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Is Organic Farm *"
            android:textSize="18dp"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:paddingRight="10dp"
            android:inputType="textFilter"
            android:layout_marginTop="15dp"
            android:textColor="#0C0C0C"
            />

        <RadioGroup

            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radiogrp_organic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            >

            <RadioButton

                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:padding="5dp"
                android:checked="false"
                android:buttonTint="@color/black"
                android:textSize="18dp"
                android:tag="1"/>

            <RadioButton

                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:padding="5dp"
                android:checked="false"
                android:layout_marginLeft="50dp"
                android:buttonTint="@color/black"
                android:textSize="18dp"
                android:tag="0"/>

        </RadioGroup>




        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Any Legal Issues on farm"
            android:textSize="18dp"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:paddingRight="10dp"
            android:inputType="textFilter"
            android:layout_marginTop="15dp"
            android:textColor="#0C0C0C"
            />


            <RadioGroup

                android:id="@+id/radiogrp_issue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
               >

                <RadioButton

                    android:id="@+id/yes1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    android:checked="false"
                    android:padding="5dp"
                    android:text="Yes"
                    android:textSize="18dp" />

                <RadioButton

                    android:id="@+id/no1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:padding="5dp"
                    android:checked="false"
                    android:layout_marginLeft="50dp"
                    android:buttonTint="@color/black"
                    android:textSize="18dp"/>

            </RadioGroup>

    </LinearLayout>
</ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:gravity="bottom"
        >

        <TextView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F72C1D"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="Continue"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="20dp"

            />
    </LinearLayout>

</LinearLayout>