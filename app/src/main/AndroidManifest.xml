            android:screenOrientation="portrait" />
        <activity
            android:name="com.FarmPe.SellerHub.Activity.Slider_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.FarmPe.SellerHub.Activity.NewSignUpActivity"
            android:screenOrientation="portrait" />
        <activity
